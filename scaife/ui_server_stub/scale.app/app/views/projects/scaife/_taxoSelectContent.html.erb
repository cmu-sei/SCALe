<div class="container">
  <div class="row">
    <div class="col-xs-12" style="font-size: 90%">
      <p class="text-center"><em>Taxonomies marked in yellow are suggestions based on current analysis tool selections<br>Note: Selecting C++ will also select C</em></p>
    </div>
  </div>
  <div class="row vertical-align">
    <div class="col-xs-5">
      <div class="table-fixed-scroll-outer">
        <table class="table-fixed-scroll-inner table table-condensed">
          <thead>
            <tr>
              <th colspan="3">Taxonomies Available</th>
            </tr>
            <tr>
              <th class="header_items">Name</th>
              <th class="header_items">Version</th>
              <th class="header_items">Author</th>
            </tr>
          </thead>
          <tbody class="add-taxo-list">
            <% Taxonomy.all.each() do |taxo| %>
              <% if @project.taxonomies.exists? taxo.id %>
                <tr data-id="<%= taxo.id %>" class="list-item" style="display:none">
              <% else %>
                <tr data-id="<%= taxo.id %>" class="list-item orig-item">
                <%= hidden_field(:select_taxos, taxo.id) %>
              <% end %>
                <td><%= "#{taxo.name}" %></td>
                <td><%= "#{taxo.version_string}" %></td>
                <td><%= "#{taxo.author_source}" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-xs-2"  style="justify-content: center">
      <div>
        <div style="padding: 5px">
          <button class="btn-md btn-default add-taxo-button" type="button">Add &gt;&gt;</button>
        </div>
        <div style="padding: 5px">
          <button class="btn-md btn-default remove-taxo-button" type="button">&lt;&lt; Remove</button>
        </div>
      </div>
    </div>
    <div class="col-xs-5">
      <div class="table-fixed-scroll-outer">
        <table class="table-fixed-scroll-inner table table-condensed">
          <thead>
            <tr>
              <th colspan="3">Taxonomies Selected</th>
            </tr>
            <tr>
              <th class="header_items">Name</th>
              <th class="header_items">Version</th>
              <th class="header_items">Author</th>
            </tr>
          </thead>
          <tbody class="remove-taxo-list">
            <% Taxonomy.all.each() do |taxo| %>
              <% if @project.taxonomies.exists?(taxo.id) %>
                <tr data-id="<%= taxo.id %>" class="list-item orig-item">
                <%= hidden_field(:deselect_taxos, taxo.id) %>
              <% else %>
                <tr data-id="<%= taxo.id %>" class="list-item" style="display: none">
              <% end %>
                <td><%= "#{taxo.name}" %></td>
                <td><%= "#{taxo.version_string}" %></td>
                <td><%= "#{taxo.author_source}" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
