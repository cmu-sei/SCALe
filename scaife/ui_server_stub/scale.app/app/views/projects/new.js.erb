$(document).ready(function(){
    $('input.project_type_selection[type=radio]').change(function() { //change event by class
        if (this.value == "scale") {
            $(this.ClassName[type=hidden]).val("scale");
        }
        else if (this.value == "scaife"') {
           $(this.ClassName[type=hidden]).val("scaife");
        }
    });
});
