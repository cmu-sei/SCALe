$(document).ready(function() {
  registerFormId = "#register-form-msg";
  <% if @scaife_status_code == 201 %>
    <% if @scaife_login_status_code == 200 %>
      $(".scaife-visible").each(function() {
        $(this).show();
      });
      location.reload();
    <% else %>
      $(registerFormId).show();
      $(registerFormId).text("<%= j @scaife_login_response %>");
    <% end %>
  <% else %>
    $(registerFormId).show();
    $(registerFormId).text("<%= j @scaife_response %>");
  <% end %>
});
