// This is the javascript response that will be run when
// an AlertConditions#Show query is invoked. The HTML comes from the alert partial.

$( function() {
  var view = '<%= session[:view] %>';

  if(view === "unfused"){
    $("#myModal").html("<%= escape_javascript(render(@supplemental_unfused)) %>"); //inserts content into your empty div.
  } else {
    $("#myModal").html("<%= escape_javascript(render(@supplemental)) %>"); //inserts content into your empty div.
  }
});

